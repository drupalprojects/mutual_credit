        'type' => 'varchar',
        'length' => '8',
      ),
      'data' => array(
        'description' => 'the currency object',
        'type' => 'text',
        'serialize' => TRUE,
      ),
    ),
    'primary key' => array('currcode'),
    'unique keys' => array(
      'name' => array('currcode')
    ),
    'export' => array(
      'key' => 'currcode',
      'key name' => t('Universal currency code (8 chars, immutable)'),
      'primary key' => 'currcode',
