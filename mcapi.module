    $message['body'][] =  token_replace($params['config']['body'], $params, $options);
    $message['body'][] =  token_replace($params['config']['body'], $params, $options);
    $message['headers']['cc'] = $params['config']['cc'];
    $message['headers']['bcc'] = $params['config']['bcc'];
  }
}

