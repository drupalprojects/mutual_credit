/*
 * returns a form element for picking a currency
 * if $picker_options is an array of currencies keyed by currcode, it returns a select
 * if $picker_options is NULL it returns a hidden field
 */
function currency_picker_element($default = NULL, $multiple = FALSE, $currencies = NULL) {
  if (is_array($currencies)) {
    $options = _currency_picker_element_options($currencies);
  }
  if (empty($options) || count($options) < 2) {
    if (empty($default)) $default = key(currencies_load());
    return array(
      '#type' => 'hidden',
      '#value' => $default
    );
  }

  return array(
    '#title' => t('Currency'),
    '#type' => 'select',
    '#options' =>  array(0 => 'Please choose...') + $options,
    '#default_value' => $default,
    '#multiple' => $multiple,
    '#required' => TRUE,
  );
}
//build a key value array of currency codes and currency names
//$currencies is an array of the form returned by currencies_load
//if $currencies is empty, it will assume you mean all currencies
function _currency_picker_element_options($currencies = array()) {
  if (empty($currencies)) {
    $currencies = &drupal_static('currencies');
  }
  foreach ($currencies as $currcode => $currency) {
    $options[$currcode] = $currency->human_name;
  }
  return $options;
}

