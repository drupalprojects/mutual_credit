/*
 * Implements hook_mcapi_info_types
 *
 */
function mcapi_forms_mcapi_info_types() {
  static $types;
  if (!isset($types)) {
    $mcapi_forms = mcapi_forms_load();
    foreach($mcapi_forms as $mcapi_form) {
      if ($mcapi_form->data['experience']['title']) {
        $types[] = $mcapi_form->name;
      }
    }
  }
  return $types;
}

