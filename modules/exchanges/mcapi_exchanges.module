/**
 * implements hook_query_TAG_alter for tag entity_query_mcapi_wallet
 * limits all wallet entityQueries to the exchanges of the current user OR the wallets of the current user
 */
function mcapi_exchanges_query_whichWallets_alter(\Drupal\Core\Database\Driver\mysql\Select $query) {
  $exchanges = User::load(\Drupal::currentUser()->id())
    ->get(EXCHANGE_OG_FIELD)
    ->referencedEntities();
  //referencedEntities are not keyed by id, unfortunately
  $exids = [];
  foreach ($exchanges as $exchange) {
    $exids[] = $exchange->id();
  }
  if ($exids and $wids = Exchanges::walletsInExchange($exids)) {
    //echo 'mcapi_exchanges_query_whichWallets_alter';print_r($wids);
    $query->condition('w.wid', $wids, 'IN');
  }
  else {
    //if the holder isn't in an exchange, or has no compatiable wallet, the query returns nothing
    $query->condition('w.wid', 0);
  }
}

/**
 * implements hook_ENTITY_TYPE_insert for mcapi_wallet().
 * Ensure the wallet is in the same Exchange as its holder
 * @todo update this when og field is loading into the entity
 * @note this assumes that every holder is in an exchange
 */
function mcapi_exchanges_mcapi_wallet_presave($wallet) {
  $holder = $wallet->getHolder();

  if ($holder->getEntityTypeId() == 'mcapi_exchange') {
    $memof = $holder->id();
  }
  elseif($items = $holder->get(EXCHANGE_OG_FIELD)) {
    $memof = $items->target_id;
  }
  if ($memof) {
    $wallet->{EXCHANGE_OG_FIELD}->target_id = $memof;
  }
  else {
    drupal_set_message('Wallet holder is NOT in an exchange: ',$wallet->holder_entity_type->value .' '.$wallet->holder_entity_id->value, 'error');
  }
}


