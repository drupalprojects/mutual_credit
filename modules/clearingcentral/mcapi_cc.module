const CLEARING_CENTRAL_URL = 'http://cxn.org.za';
const CLEARING_CENTRAL_IP = '69.61.35.151';
const TRANSACTION_STATE_HANGING = 'hanging';
const CEN_SUCCESS = 1;

use Drupal\Core\Link;

