  $currency = currency_load($form['cid']['#default_value']);
  $saved = isset($currency->limits_equations) ? $currency->limits_equations : array('min' => NULL, 'max' => NULL);

  return array(
    'min' => array(
      '#title' => t('Formula to calculate minimum limit'),
